<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Artículos</title>


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

  <div class="container my-5">
    <h1 class="text-center mb-4">Lista de Artículos</h1>


    <a href="/articulos/nuevo" class="btn btn-primary mb-3">➕ Nuevo Artículo</a>

    <table class="table table-striped table-bordered">
      <thead class="table-light">
        <tr>
          <th>Descripción</th>
          <th>Precio (S/.)</th>
          <th>Precio ($)</th>
          <th>Cantidad en stock</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each articulos}}
        <tr>
          <td>{{this.descripcion}}</td>
          <td>{{this.precio_soles}}</td>
          <td>{{this.precio_dolares}}</td>
          <td>{{this.cantidad_stock}}</td>
          <td>{{this.marca}}</td>
          <td>{{this.modelo}}</td>
          <td class="d-flex justify-content-around">
            <a href="/articulos/{{this._id}}/editar" class="btn btn-warning btn-sm">Editar</a>

            <!-- Formulario de eliminación -->
            <form action="/articulos/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
            </form>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="7" class="text-center">No hay artículos registrados</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>



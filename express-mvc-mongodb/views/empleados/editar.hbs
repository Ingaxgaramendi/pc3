<div class="form-container">
    <h2>Editar Empleado</h2>

    {{#if error}}
    <div class="alert alert-error">
        ‚ö†Ô∏è {{error}}
    </div>
    {{/if}}

    <form action="/empleados/{{empleado._id}}?_method=PUT" method="POST" class="product-form">
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input 
                type="text" 
                id="nombre" 
                name="nombre" 
                value="{{empleado.nombre}}" 
                required
                placeholder="Ej: Juan">
        </div>

        <div class="form-group">
            <label for="apellido">Apellido:</label>
            <input 
                type="text" 
                id="apellido" 
                name="apellido" 
                value="{{empleado.apellido}}" 
                required
                placeholder="Ej: P√©rez">
        </div>

        <div class="form-group">
            <label for="dni">DNI:</label>
            <input 
                type="text" 
                id="dni" 
                name="dni" 
                value="{{empleado.dni}}" 
                required
                placeholder="Ej: 12345678">
        </div>

        <div class="form-group">
            <label for="cargo">Cargo:</label>
            <input 
                type="text" 
                id="cargo" 
                name="cargo" 
                value="{{empleado.cargo}}" 
                required
                placeholder="Ej: Gerente">
        </div>

        <div class="form-group">
            <label for="salario">Salario:</label>
            <input 
                type="number" 
                id="salario" 
                name="salario" 
                value="{{empleado.salario}}" 
                required
                min="0"
                step="0.01"
                placeholder="0.00">
        </div>

        <div class="form-group">
            <label for="estado">Estado:</label>
            <select id="estado" name="estado" class="form-control">
                <option value="Activo" {{#if (eq empleado.estado "Activo")}}selected{{/if}}>Activo</option>
                <option value="Inactivo" {{#if (eq empleado.estado "Inactivo")}}selected{{/if}}>Inactivo</option>
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">üíæ Actualizar</button>
            <a href="/empleados" class="btn btn-secondary">‚ùå Cancelar</a>
        </div>
    </form>
</div>
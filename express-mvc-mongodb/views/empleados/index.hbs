<div class="header-section">
    <h2>👔 Lista de Empleados</h2>
    <a href="/empleados/crear" class="btn btn-primary">➕ Nuevo Empleado</a>
</div>

{{#if estadisticas}}
<div class="stats">
    <div class="stat-card">
        <h3>Total Empleados</h3>
        <p class="stat-number">{{estadisticas.total}}</p>
    </div>
    <div class="stat-card">
        <h3>Total Salarios</h3>
        <p class="stat-number">${{estadisticas.totalSalario}}</p>
    </div>
    <div class="stat-card">
        <h3>Salario Promedio</h3>
        <p class="stat-number">${{estadisticas.promedioSalario}}</p>
    </div>
</div>
{{/if}}

{{#if empleados.length}}
<table class="product-table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Cargo</th>
            <th>Salario</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each empleados}}
        <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.apellido}}</td>
            <td>{{this.dni}}</td>
            <td>{{this.cargo}}</td>
            <td>${{this.salario}}</td>
            <td>{{this.estado}}</td>
            <td class="actions">
                <a href="/empleados/{{this._id}}/editar" class="btn btn-small btn-secondary">✏️ Editar</a>
                <form action="/empleados/{{this._id}}?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('¿Estás seguro de eliminar este empleado?')">
                    <button type="submit" class="btn btn-small btn-danger">🗑️ Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="empty-state">
    <p>👷 No hay empleados registrados</p>
    <a href="/empleados/crear" class="btn btn-primary">Agregar el primero</a>
</div>
{{/if}}
